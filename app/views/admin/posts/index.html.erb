<div class="card-list-container py-5">

  <div class="card w-50 mx-auto mt-4 shadow-lg">

    <div class="card-body">

      <h1>投稿一覧</h1>

    </div>

  </div>

</div>


<div class="card-list-container py-5">

　<% @post.each do |post| %>

<div class="card w-50 mx-auto mt-4 shadow-lg">

  <div class="card-body">

    <div class="row">

      <div class="col-2">

       <p><%= image_tag post.user.get_profile_image(100,100) , class:"mt-3 rounded-circle"; %></p>

  　　</div>

  　　<div class="col-10">

         <p class="card-title">

  　　　　<span><i class="fas fa-user"></i><%= post.user.name %></span>

            <%= link_to admin_post_path(post.id), class:"text-dark" do %>
  　　　　　　　　<strong><i class="far fa-flag"></i><span><%= post.title %></span></strong>
  　         <% end %>

   　　　</p>

  　　　　<p class="card-text">内容：<%= post.content %></p>

        <p><% post.tags.each do |tag| %>
           <%= tag.name %>
           <% end %>
        </p>

        <span><%= link_to "#{post.post_comments.count} コメント", admin_post_path(post.id), class:"text-dark" %></span>

  　　</div>

    </div>

  </div>

</div>

<% end %>

</div>