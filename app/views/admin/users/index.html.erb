<div class="card-list-container py-5">

  <div class="card w-50 mx-auto mt-4 shadow-lg">

    <div class="card-body">

      <h1>会員一覧</h1>

    </div>

  </div>

</div>



<div class="card-list-container py-5">

<!-- 一覧で表示するための記述 -->

  <% @users.each do |user| %>

  <div class="card w-50 mx-auto mt-4 shadow-lg">

    <div class="card-body">

      <div class="row">

        <div class="col-2">

          <p><%= image_tag user.get_profile_image(100,100), class:"mt-3 rounded-circle";%></p>

        </div>

        <div class="col-10">

          <p class="card-title">

            <span>
              <i class="fas fa-user"></i>
              <%= link_to user.name, admin_user_path(user.id), class:"text-dark"  %>
            </span>
          
          </p>
        
        </div>
        
      </div>  

    </div>

  </div>
  
  <% end %>
</div>
